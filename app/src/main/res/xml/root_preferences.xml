<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">
        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="unite"
            app:title="@string/unite"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="format"
            android:title="@string/format_24h" />
    </PreferenceCategory>


    <PreferenceCategory android:title="@string/a_propos">
        <PreferenceScreen
            android:key="version"
            android:summary="1.0"
            android:title="@string/version" />

        <PreferenceScreen
            android:summary="@string/developpe_par"
            android:title="@string/developpeurs" />

    </PreferenceCategory>

</PreferenceScreen>